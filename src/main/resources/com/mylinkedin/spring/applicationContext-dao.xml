<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/aop 
           http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
           http://www.springframework.org/schema/tx 
           http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">
    
    
    <bean id="companyDao" class="com.mylinkedin.dao.impl.CompanyDaoImpl">
    	<property name="sessionFactory">
    		<ref bean="sessionFactory"/>
    	</property>
    </bean>
    
    <bean id="languageDao" class="com.mylinkedin.dao.impl.LanguageDaoImpl">
    	<property name="sessionFactory">
    		<ref bean="sessionFactory"/>
    	</property>
    </bean>
    
    <bean id="notificationDao" class="com.mylinkedin.dao.impl.NotificationDaoImpl">
    	<property name="sessionFactory">
    		<ref bean="sessionFactory"/>
    	</property>
    </bean>
    
    <bean id="skillDao" class="com.mylinkedin.dao.impl.SkillDaoImpl">
    	<property name="sessionFactory">
    		<ref bean="sessionFactory"/>
    	</property>
    </bean>
    
    <bean id="universityDao" class="com.mylinkedin.dao.impl.UniversityDaoImpl">
    	<property name="sessionFactory">
    		<ref bean="sessionFactory"/>
    	</property>
    </bean>
    
    <bean id="updateDao" class="com.mylinkedin.dao.impl.UpdateDaoImpl">
    	<property name="sessionFactory">
    		<ref bean="sessionFactory"/>
    	</property>
    </bean>
    
    <bean id="userDao" class="com.mylinkedin.dao.impl.UserDaoImpl">
    	<property name="sessionFactory">
    		<ref bean="sessionFactory"/>
    	</property>
    </bean>
    
</beans>